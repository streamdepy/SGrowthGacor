<main class="flex flex-col ml-48 self-center mb-16 mt-16 w-full max-w-[1256px] max-md:mt-10 max-md:max-w-full">
  <header class="flex gap-3.5 self-start">
    <img
      src="https://api.builder.io/api/v1/image/assets/TEMP/c44af07e3c930c7fea223a8eb981ce2b2a5a5a8c?width=462"
      alt="GRI Environment icon"
      class="object-contain shrink-0 my-auto rounded-full aspect-[1.04] w-[78px]"
    />
    <div class="flex flex-col">
      <h2 class="text-4xl font-semibold text-black">GRI Governance</h2>
      <p class="text-xl font-medium leading-none text-gray-500">
        Governance Performance
      </p>
    </div>
  </header>

<!-- Bukti dan Dokumentasi -->
<section class="flex flex-col items-start py-14 px-16 mt-10 w-full bg-white rounded-2xl shadow-2xl max-w-[981px] max-md:px-5">
  <h3 class="text-3xl font-semibold text-teal-700">Bukti dan Dokumentasi</h3>
  <p class="mt-3 text-gray-500">Unggah dokumen pendukung terkait kebijakan dan sosialisasi.</p>

  <div class="w-full mt-8 space-y-8">
    <!-- Bukti sosialisasi -->
    <div>
      <label class="block pb-2 text-base font-medium">Upload dokumen kebijakan / bukti sosialisasi (opsional)</label>
      <div class="flex gap-5 max-md:flex-col">
        <div class="w-6/12 max-md:w-full">
          <input type="file" class="policy-proof-file w-full px-4 py-3 border rounded-2xl bg-slate-50">
        </div>
        <div class="w-6/12 max-md:w-full">
          <input type="url" class="policy-proof-link w-full px-8 py-4 border rounded-2xl bg-slate-50" placeholder="Atau tautan dokumen">
        </div>
      </div>
    </div>

    <!-- Laporan audit / evaluasi -->
    <div>
      <label class="block pb-2 text-base font-medium">Upload laporan audit atau evaluasi kebijakan (opsional)</label>
      <div class="flex gap-5 max-md:flex-col">
        <div class="w-6/12 max-md:w-full">
          <input type="file" class="audit-proof-file w-full px-4 py-3 border rounded-2xl bg-slate-50">
        </div>
        <div class="w-6/12 max-md:w-full">
          <input type="url" class="audit-proof-link w-full px-8 py-4 border rounded-2xl bg-slate-50" placeholder="Atau tautan dokumen">
        </div>
      </div>
    </div>
  </div>

  <!-- Buttons -->
  <div class="flex justify-end gap-4 mt-10 w-full">
    <button type="button"
      onclick="window.history.back()"
      class="px-8 py-2 text-base font-medium text-center text-teal-700 border border-teal-700 rounded-xl hover:bg-teal-700 hover:text-white transition">
      Sebelumnya
    </button>
    <button type="submit"
      class="px-8 py-2 text-base font-medium text-center text-white bg-lime-500 rounded-xl hover:bg-lime-600 transition">
      Simpan
    </button>
  </div>
</section>


</main>

