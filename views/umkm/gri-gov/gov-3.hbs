<main class="flex flex-col ml-48 self-center mb-16 mt-16 w-full max-w-[1256px] max-md:mt-10 max-md:max-w-full">
  <header class="flex gap-3.5 self-start">
    <img
      src="https://api.builder.io/api/v1/image/assets/TEMP/c44af07e3c930c7fea223a8eb981ce2b2a5a5a8c?width=462"
      alt="GRI Environment icon"
      class="object-contain shrink-0 my-auto rounded-full aspect-[1.04] w-[78px]"
    />
    <div class="flex flex-col">
      <h2 class="text-4xl font-semibold text-black">GRI Governance</h2>
      <p class="text-xl font-medium leading-none text-gray-500">
        Governance Performance
      </p>
    </div>
  </header>

  <!-- Sosialisasi & Kepatuhan Kebijakan -->
  <section class="flex flex-col items-start py-14 px-16 mt-10 w-full bg-white rounded-2xl shadow-2xl max-w-[981px] max-md:px-5">
    <h3 class="text-3xl font-semibold text-teal-700">Sosialisasi & Kepatuhan Kebijakan</h3>
    <p class="mt-3 text-gray-500">Isi informasi terkait sosialisasi, pengawasan, dan evaluasi kebijakan.</p>

    <div class="w-full mt-8 space-y-6">

      <div class="grid grid-cols-2 gap-5 max-md:grid-cols-1">
        <div>
          <label class="block pb-2 text-base font-medium">Apakah kebijakan ini telah disosialisasikan ke karyawan?</label>
          <select id="pol_share" class="w-full px-8 py-4 rounded-2xl border border-gray-300 bg-slate-50">
            <option value="">Pilih</option>
            <option selected>Ya</option> <option>Tidak</option>
            <option>Sedang berjalan</option>
          </select>
        </div>

        <div>
          <label class="block pb-2 text-base font-medium">Metode sosialisasi yang digunakan</label>
          <select id="pol_method" class="w-full px-8 py-4 rounded-2xl border border-gray-300 bg-slate-50">
            <option value="">Pilih</option>
            <option selected>Pelatihan internal</option> <option>Email/Portal</option>
            <option>Workshop</option>
            <option value="lainnya">Lainnya</option>
          </select>
        </div>
      </div>

      <div class="grid grid-cols-2 gap-5 max-md:grid-cols-1">
        <div>
          <label class="block pb-2 text-base font-medium">Jumlah pelatihan terkait kebijakan dalam periode pelaporan</label>
          <input type="number" min="0" placeholder="0" value="1"
                 class="w-full px-8 py-4 rounded-2xl border border-gray-300 bg-slate-50 outline-none"> </div>

        <div>
          <label class="block pb-2 text-base font-medium">Persentase karyawan yang telah mengikuti pelatihan kebijakan</label>
          <div class="relative">
            <input type="number" min="0" max="100" step="0.01" placeholder="0" value="90"
                   class="w-full px-8 py-4 pr-12 rounded-2xl border border-gray-300 bg-slate-50 outline-none"> <span class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-400 pointer-events-none">%</span>
          </div>
        </div>
      </div>

      <div class="grid grid-cols-2 gap-5 max-md:grid-cols-1">
        <div>
          <label class="block pb-2 text-base font-medium">Apakah ada mekanisme pengawasan kepatuhan?</label>
          <select id="pol_monitor" class="w-full px-8 py-4 rounded-2xl border border-gray-300 bg-slate-50">
            <option value="">Pilih</option>
            <option selected>Ya</option> <option>Tidak</option>
          </select>
        </div>

        <div>
          <label class="block pb-2 text-base font-medium">Bentuk mekanisme pengawasan</label>
          <select id="pol_monitor_type" class="w-full px-8 py-4 rounded-2xl border border-gray-300 bg-slate-50">
            <option value="">Pilih</option>
            <option selected>Audit internal</option> <option>Audit Eksternal</option>
          
            <option value="lainnya">Lainnya</option>
          </select>
        </div>
      </div>

      <div class="grid grid-cols-2 gap-5 max-md:grid-cols-1">
        <div>
          <label class="block pb-2 text-base font-medium">Apakah kebijakan ini dievaluasi atau diperbarui secara berkala?</label>
          <select id="pol_eval" class="w-full px-8 py-4 rounded-2xl border border-gray-300 bg-slate-50">
            <option value="">Pilih</option>
            <option value="ya" selected>Ya</option> <option value="tidak">Tidak</option>
          </select>
        </div>

        <div id="pol_eval_freq_wrap" class="hidden">
          <label class="block pb-2 text-base font-medium">Jika Ya, frekuensi evaluasi</label>
          <select id="pol_eval_freq" class="w-full px-8 py-4 rounded-2xl border border-gray-300 bg-slate-50">
            <option value="">Pilih</option>
            <option selected>kuartal</option> <option>tahunan</option>
            <option value="lainnya">Lainnya</option>
          </select>
        </div>
      </div>

      <div>
        <label class="block pb-2 text-base font-medium">Catatan atau kendala dalam implementasi</label>
        <textarea rows="5" placeholder="Tuliskan catatan atau kendalaâ€¦"
                  class="w-full px-8 py-4 rounded-2xl border border-gray-300 bg-slate-50 placeholder-black/50 outline-none resize-y">Perlunya peningkatan intesitas pelatihan bagi karyawan</textarea>
      </div>

      <!-- Buttons -->
      <div class="flex justify-end gap-4 mt-8 w-full">
        <a href="/umkm/gov-2" type="button"
          onclick="window.history.back()"
          class="px-8 py-2 text-base font-medium text-center text-teal-700 border border-teal-700 bg-white rounded-xl hover:bg-teal-700 hover:text-white transition">
          Sebelumnya
        </a>
        <a href="/umkm/gov-4" type="submit"
          class="px-8 py-2 text-base font-medium text-center text-white bg-lime-500 rounded-xl hover:bg-lime-600 transition">
          Simpan
        </a>
      </div>
    </div>
  </section>

</main>

<script>
  // Tampilkan "Frekuensi evaluasi" hanya jika jawabannya "Ya"
  document.addEventListener('DOMContentLoaded', () => {
    const evalSel = document.getElementById('pol_eval');
    const freqWrap = document.getElementById('pol_eval_freq_wrap');

    function syncEval() {
      const show = evalSel && evalSel.value === 'ya';
      if (!freqWrap) return;
      freqWrap.classList.toggle('hidden', !show);
      const freqSel = document.getElementById('pol_eval_freq');
      if (freqSel) freqSel.disabled = !show;
      if (!show && freqSel) freqSel.value = '';
    }

    if (evalSel) {
      evalSel.addEventListener('change', syncEval);
      syncEval();
    }
  });
</script>
