<!-- Template item Scope 3 -->
<template id="scope3_item_tpl">
  <div class="s3-item border border-gray-200 rounded-2xl p-4">
    <div class="w-full">
      <label class="block pb-2 text-base font-medium">Total emisi Scope 3 (tCO₂e)</label>
      <input type="number" min="0" step="0.0001" name=""
        placeholder="0"
        class="s3-total w-full px-8 py-4 mt-2 text-base text-black rounded-2xl border border-gray-300 bg-slate-50 outline-none hover:ring focus:ring-2 focus:ring-teal-600 transition">
    </div>

    <div class="w-full mt-6">
      <label class="block pb-2 text-base font-medium">Sumber utama emisi Scope 3</label>
      <select name="" class="s3-source w-full px-8 py-4 mt-2 text-base text-black rounded-2xl border border-gray-300 bg-slate-50 outline-none hover:ring focus:ring-2 focus:ring-teal-600 transition">
        <option value="">Pilih</option>
        <option>Rantai Pasok</option>
        <option>Transportasi Pihak Ketiga</option>
        <option>Perjalanan Dinas</option>
        <option>Limbah</option>
        <option value="lainnya">Lainnya</option>
      </select>
      <input type="text" name="" placeholder="Sebutkan sumber lainnya"
        class="s3-source-other w-full px-4 py-3 mt-3 rounded-lg border border-gray-300 bg-slate-50 hidden">
    </div>

    <div class="mt-4 flex justify-end">
      <button type="button" class="s3-remove px-4 py-2 rounded-xl border border-gray-300 text-gray-700 hover:bg-gray-50 transition">
        Hapus entri
      </button>
    </div>
  </div>
</template>



</main>
<script>
  // Jika helper toggleEl belum ada, gunakan ini:
  function toggleEl(el, show, disable = true) {
    if (!el) return;
    el.classList.toggle('hidden', !show);
    if (disable) el.disabled = !show;
    if (!show && (el.tagName === 'INPUT' || el.tagName === 'TEXTAREA')) el.value = '';
    if (!show && el.tagName === 'SELECT') el.value = '';
  }

  document.addEventListener('DOMContentLoaded', function () {
    const hasSel  = document.getElementById('scope3_has');
    const details = document.getElementById('scope3_details');
    const list    = document.getElementById('scope3_list');
    const addBtn  = document.getElementById('scope3_add_item');
    const tpl     = document.getElementById('scope3_item_tpl');

    function syncHas() {
      const yes = hasSel && hasSel.value === 'ya';
      toggleEl(details, yes, false);
      if (details) {
        details.querySelectorAll('input, select, textarea, button').forEach(el => {
          if (el.id === 'scope3_add_item') { el.disabled = !yes; return; }
          el.disabled = !yes;
        });
      }
    }

    if (hasSel) {
      hasSel.addEventListener('change', syncHas);
      syncHas();
    }

    if (!list || !addBtn || !tpl) return;

    function reindex() {
      const items = list.querySelectorAll('.s3-item');
      items.forEach((item, idx) => {
        item.querySelectorAll('input, select, textarea').forEach(el => {
          if (el.classList.contains('s3-total'))        el.name = `s3[${idx}][total]`;
          else if (el.classList.contains('s3-source'))  el.name = `s3[${idx}][source]`;
          else if (el.classList.contains('s3-source-other')) el.name = `s3[${idx}][source_other]`;
        });

        const rm = item.querySelector('.s3-remove');
        if (rm) rm.classList.toggle('hidden', items.length <= 1);
      });
    }

    function attachLogic(item) {
      const sourceSel = item.querySelector('.s3-source');
      const sourceOther = item.querySelector('.s3-source-other');

      function syncSource() {
        const isOther = sourceSel && sourceSel.value === 'lainnya';
        toggleEl(sourceOther, isOther);
      }

      if (sourceSel) { sourceSel.addEventListener('change', syncSource); syncSource(); }

      const rmBtn = item.querySelector('.s3-remove');
      if (rmBtn) {
        rmBtn.addEventListener('click', () => {
          const items = list.querySelectorAll('.s3-item');
          if (items.length > 1) {
            item.remove();
            reindex();
          }
        });
      }
    }

    // item awal
    const first = list.querySelector('.s3-item');
    if (first) attachLogic(first);
    reindex();

    // tombol tambah
    addBtn.addEventListener('click', () => {
      const clone = tpl.content.firstElementChild.cloneNode(true);
      list.appendChild(clone);
      attachLogic(clone);
      reindex();
    });
  });
</script>
