  <!-- Detail Scope 3 (tampil hanya jika Ya) -->
  <div id="scope3_details" class="w-full mt-6 hidden">
    <!-- Daftar entri Scope 3 -->
    <div id="scope3_list" class="space-y-8">
      <!-- Item #0 (awalan) -->
      <div class="s3-item border border-gray-200 rounded-2xl p-4">
        <!-- Total emisi Scope 3 -->
        <div class="w-full">
          <label class="block pb-2 text-base font-medium">Total emisi Scope 3 (tCO₂e)</label>
          <input type="number" min="0" step="0.0001" name="s3[0][total]" placeholder="0"
