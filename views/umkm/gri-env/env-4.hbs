          <select name="s3[0][source]" class="s3-source w-full px-8 py-4 mt-2 text-base text-black rounded-2xl border border-gray-300 bg-slate-50 outline-none hover:ring focus:ring-2 focus:ring-teal-600 transition">
            <option value="">Pilih</option>
            <option>Rantai Pasok</option>
            <option>Transportasi Pihak Ketiga</option>
            <option>Perjalanan Dinas</option>
            <option>Limbah</option>
            <option value="lainnya">Lainnya</option>
          </select>
          <input type="text" name="s3[0][source_other]" placeholder="Sebutkan sumber lainnya"
            class="s3-source-other w-full px-4 py-3 mt-3 rounded-lg border border-gray-300 bg-slate-50 hidden">
        </div>

        <!-- Tombol hapus entri -->
        <div class="mt-4 flex justify-end">
          <button type="button" class="s3-remove hidden px-4 py-2 rounded-xl border border-gray-300 text-gray-700 hover:bg-gray-50 transition">
            Hapus entri
          </button>
        </div>
      </div>
    </div>

    <!-- Tombol Tambah item -->
    <div class="mt-6 flex justify-end">
      <button type="button" id="scope3_add_item"
        class="inline-flex items-center gap-2 px-4 py-2 rounded-xl text-teal-700 text-sm font-medium transition">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
