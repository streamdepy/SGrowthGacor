<script>
  // toggle helper (gunakan jika belum ada di halaman)
  function toggleEl(el, show, disable = true) {
    if (!el) return;
    el.classList.toggle('hidden', !show);
    if (disable) el.disabled = !show;
    if (!show && (el.tagName === 'INPUT' || el.tagName === 'TEXTAREA')) el.value = '';
    if (!show && el.tagName === 'SELECT') el.value = '';
  }

  document.addEventListener('DOMContentLoaded', function () {
    const hasSel  = document.getElementById('scope2_has');
    const details = document.getElementById('scope2_details');
    const list    = document.getElementById('scope2_list');
    const addBtn  = document.getElementById('scope2_add_item');
    const tpl     = document.getElementById('scope2_item_tpl');

    function syncHas() {
      const yes = hasSel && hasSel.value === 'ya';
      toggleEl(details, yes, false);
      if (details) {
        details.querySelectorAll('input, select, textarea, button').forEach(el => {
          if (el.id === 'scope2_add_item') { el.disabled = !yes; return; }
          el.disabled = !yes;
        });
      }
    }

    if (hasSel) {
      hasSel.addEventListener('change', syncHas);
      syncHas();
    }

    if (!list || !addBtn || !tpl) return;

    function reindex() {
      const items = list.querySelectorAll('.s2-item');
      items.forEach((item, idx) => {
        item.querySelectorAll('input, select, textarea').forEach(el => {
          if (el.classList.contains('s2-total'))                  el.name = `s2[${idx}][total]`;
          else if (el.classList.contains('s2-energy'))            el.name = `s2[${idx}][energy]`;
          else if (el.classList.contains('s2-energy-other'))      el.name = `s2[${idx}][energy_other]`;
          else if (el.classList.contains('s2-has-reduction'))     el.name = `s2[${idx}][has_reduction]`;
          else if (el.classList.contains('s2-reduced'))           el.name = `s2[${idx}][reduced]`;
          else if (el.classList.contains('s2-reduction-type'))    el.name = `s2[${idx}][reduction_type]`;
          else if (el.classList.contains('s2-reduction-type-other')) el.name = `s2[${idx}][reduction_type_other]`;
        });

        const rm = item.querySelector('.s2-remove');
        if (rm) rm.classList.toggle('hidden', items.length <= 1);
      });
    }

    function attachLogic(item) {
      const energySel = item.querySelector('.s2-energy');
      const energyOther = item.querySelector('.s2-energy-other');
      const hasRed = item.querySelector('.s2-has-reduction');
      const reduced = item.querySelector('.s2-reduced');
      const redType = item.querySelector('.s2-reduction-type');
      const redOther = item.querySelector('.s2-reduction-type-other');

      function syncEnergy() {
        const isOther = energySel && energySel.value === 'lainnya';
        toggleEl(energyOther, isOther);
      }
      function syncReduction() {
        const yes = hasRed && hasRed.value === 'ya';
        toggleEl(reduced, yes);
        toggleEl(redType, yes);
        if (!yes) toggleEl(redOther, false);
      }
      function syncRedType() {
        const isOther = redType && redType.value === 'lainnya';
        toggleEl(redOther, isOther);
      }

      if (energySel) { energySel.addEventListener('change', syncEnergy); syncEnergy(); }
      if (hasRed)    { hasRed.addEventListener('change', syncReduction); syncReduction(); }
      if (redType)   { redType.addEventListener('change', syncRedType);  syncRedType(); }

      const rmBtn = item.querySelector('.s2-remove');
      if (rmBtn) {
        rmBtn.addEventListener('click', () => {
          const items = list.querySelectorAll('.s2-item');
          if (items.length > 1) {
            item.remove();
            reindex();
          }
        });
      }
    }

    // item awal
    const first = list.querySelector('.s2-item');
    if (first) attachLogic(first);
    reindex();

    // tombol tambah
    addBtn.addEventListener('click', () => {
      const clone = tpl.content.firstElementChild.cloneNode(true);
      list.appendChild(clone);
      attachLogic(clone);
      reindex();
    });
  });
</script>
