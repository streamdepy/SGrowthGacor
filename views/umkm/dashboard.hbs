<div class="flex overflow-hidden flex-col pb-24 bg-white max-md:pb-16">

  <div class="flex flex-col items-start mt-12 w-full max-md:mt-8 max-md:max-w-full">
    <!-- Header Perusahaan -->
    <div class="ml-36 mt-6 max-w-full w-[600px]">
      <div class="flex gap-5 max-md:flex-col">
        <div class="flex flex-col w-3/12 max-md:w-full">
          <div class="flex items-center justify-center w-[130px] h-[130px] mt-1 border-[4px] border-orange-300 rounded-full">
            <img loading="lazy" src="https://api.builder.io/api/v1/image/assets/TEMP/014ef180b8fdeb25f39e8b04f165ca185503abf4?apiKey=ac04cd396e1f47f18955cd19640f183d&" class="object-contain w-[100px] h-[100px]" />
          </div>

        </div>
        <div class="flex flex-col ml-4 w-full max-md:w-full">
          <div class="flex flex-col w-full">
            <div class="self-start text-xl font-medium text-gray-500 tracking-[3px]">
              Selamat Datang,
              {{business.legal_form}}
              {{business.business_name}}
            </div>
            <div class="flex flex-col items-start pr-10 pl-1 w-full text-base font-regular text-teal-700">
              <div class="flex gap-2">
                <div class="flex-auto">{{business.industry_type}}</div>
                <div class="flex gap-1 whitespace-nowrap">
                  <div class="w-2 h-2 my-auto rounded-full bg-teal-700/50"></div>
                  <div>{{business.established_year}}</div>
                </div>
              </div>
              <div class="mt-1">Kantor Pusat: {{business.headquarters}}, {{business.city}}, {{business.province}} </div>
            </div>
            <div class="flex flex-wrap gap-6 mt-3">

              {{#if business.business_name}}
                <div class="flex flex-col justify-center px-5 py-1 text-xs font-semibold text-green-600 border border-green-600 bg-green-600/20 rounded-full">
                  <div>ESG TERISI</div>
                </div>
              {{else}}
                <div class="flex flex-col justify-center px-5 py-1 text-xs font-semibold text-red-600 border border-red-600 bg-red-600/20 rounded-full">
                  <div>ESG TIDAK ADA</div>
                </div>
              {{/if}}
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- General Info -->
    <div class="mt-12 ml-24 text-2xl font-bold text-teal-700">General Information</div>
    <div class="flex flex-wrap gap-6 px-10 py-8 ml-24 mt-6 w-full max-w-7xl bg-white rounded-xl border shadow-xl border-neutral-100">
      <div class="flex-auto">
        <div class="flex gap-5 max-md:flex-col">
          <div class="flex flex-col w-6/12 max-md:w-full">
            <div class="flex flex-col text-lg text-gray-800">
              <div>Nama Usaha</div>
              <div class="mt-2">NIB</div>
              <div class="mt-2">Kantor Pusat</div>
              <div class="mt-2">Tahun Berdiri</div>
              <div class="mt-2">Skala Usaha</div>
              <div class="mt-2">Sumber Pendapatan</div>
            </div>
          </div>
          <div class="flex flex-col ml-4 w-6/12 max-md:w-full">
            <div class="flex flex-col text-lg font-semibold text-teal-700">
              <div>: Green Steel</div>
              <div class="mt-2">: 123456789045678</div>
              <div class="mt-2">: Jalan jalan</div>
              <div class="mt-2">: 2016</div>
              <div class="mt-2">: Makro</div>
              <div class="mt-2">: Online</div>
            </div>
          </div>
        </div>
      </div>
      <button type="button" class="flex items-center self-start px-10 py-3 text-base font-medium text-center text-white whitespace-nowrap bg-orange-500 rounded-xl hover:bg-orange-600 transition-colors max-md:px-5">
        Lengkapi
      </button>

    </div>

    <!-- Pilih Fitur -->
    <div class="ml-16 mt-16 text-2xl font-bold text-teal-700">Pilih Fitur Sgrowth</div>
    <div class="mt-8 ml-12 w-full pr-36">
      <div class="flex gap-4 max-md:flex-col">
        <!-- Konsultasi -->
        <div class="flex flex-col w-3/12 max-md:w-full bg-white rounded-xl p-6 text-center shadow hover:bg-teal-50 hover:shadow-xl hover:scale-105 cursor-pointer transition duration-300">
          <img src="https://api.builder.io/api/v1/image/assets/TEMP/97ce986950f0a4769eaddaf761da0fe743aac5df?apiKey=ac04cd396e1f47f18955cd19640f183d&" class="object-contain w-[180px] mx-auto" />
          <div class="mt-4 text-xl font-semibold text-teal-700">Konsultasi</div>
          <div class="text-sm text-gray-500">Pilih pakar untuk meninjau</div>
        </div>

        <!-- Komunitas -->
        <div class="flex flex-col w-3/12 max-md:w-full bg-white rounded-xl p-6 text-center shadow hover:bg-teal-50 hover:shadow-xl hover:scale-105 cursor-pointer transition duration-300">
          <img src="https://api.builder.io/api/v1/image/assets/TEMP/0a1eaba1c15ca2ff43c5868ce8a526e2f0160ed0?apiKey=ac04cd396e1f47f18955cd19640f183d&" class="object-contain w-[150px] mx-auto" />
          <div class="mt-2 text-xl font-semibold text-teal-700">Komunitas</div>
          <div class="text-sm text-gray-500">Berbagi dan tanya-jawab</div>
        </div>

        <!-- Laporan -->
        <div class="flex flex-col w-3/12 max-md:w-full bg-white rounded-xl p-6 text-center shadow hover:bg-teal-50 hover:shadow-xl hover:scale-105 cursor-pointer transition duration-300">
          <img src="https://api.builder.io/api/v1/image/assets/TEMP/82c8c2fbd5cd9543a3d5095cd6e71a74e66a9aa1?apiKey=ac04cd396e1f47f18955cd19640f183d&" class="object-contain w-[180px] mx-auto" />
          <div class="mt-3 text-xl font-semibold text-teal-700">Laporan</div>
          <div class="text-sm text-gray-500">Hasil status ESG</div>
        </div>

        <!-- ISI GRI -->
        <div class="flex flex-col w-3/12 max-md:w-full bg-white rounded-xl p-6 text-center shadow hover:bg-teal-50 hover:shadow-xl hover:scale-105 cursor-pointer transition duration-300">
          <img src="https://api.builder.io/api/v1/image/assets/TEMP/05808ca298f3565cc120745302c8076d602aa93c?apiKey=ac04cd396e1f47f18955cd19640f183d&" class="object-contain w-[140px] mx-auto" />
          <div class="mt-4 text-xl font-semibold text-teal-700">ISI GRI</div>
          <div class="text-sm text-gray-500">Mengisi GRI untuk penilaian</div>
        </div>
      </div>
    </div>

    <!-- Artikel -->
    <div class="flex flex-col px-12 pt-8 pb-12 mt-16 w-full bg-orange-500 rounded-2xl max-md:px-5">
      <div class="flex justify-between items-center text-white">
        <div>
          <div class="text-2xl font-bold">Rilis Artikel</div>
          <div class="mt-1 text-lg">Berita, Artikel, dan Informasi Terbaru</div>
        </div>
        <a href="#" class="flex items-center gap-3 text-lg font-bold hover:text-yellow-100 transition-colors cursor-pointer">
          <span>Lihat Semua</span>
          <img src="https://api.builder.io/api/v1/image/assets/TEMP/d287c7a8a628ddcce69dd319938d22d62912e17c?apiKey=ac04cd396e1f47f18955cd19640f183d&" class="w-4" />
        </a>
      </div>
      <div class="mt-8 grid grid-cols-3 gap-4 max-md:grid-cols-1">
        <div class="bg-white rounded-lg shadow p-4">
          <img src="https://api.builder.io/api/v1/image/assets/TEMP/412bdddde3da7e5ab98c83b4140214130916dec4?apiKey=ac04cd396e1f47f18955cd19640f183d&" class="rounded-lg w-full" />
          <div class="mt-2 text-orange-500 text-sm">Artikel</div>
          <div class="mt-2 text-lg font-semibold text-black">
            Program Meeting Tahunan Pelaku UMKM Membahas Keberlanjutan
          </div>
        </div>
        <div class="bg-white rounded-lg shadow p-4">
          <img src="https://api.builder.io/api/v1/image/assets/TEMP/412bdddde3da7e5ab98c83b4140214130916dec4?apiKey=ac04cd396e1f47f18955cd19640f183d&" class="rounded-lg w-full" />
          <div class="mt-2 text-orange-500 text-sm">Artikel</div>
          <div class="mt-2 text-lg font-semibold text-black">
            Program Meeting Tahunan Pelaku UMKM Membahas Keberlanjutan
          </div>
        </div>
        <div class="bg-white rounded-lg shadow p-4">
          <img src="https://api.builder.io/api/v1/image/assets/TEMP/412bdddde3da7e5ab98c83b4140214130916dec4?apiKey=ac04cd396e1f47f18955cd19640f183d&" class="rounded-lg w-full" />
          <div class="mt-2 text-orange-500 text-sm">Artikel</div>
          <div class="mt-2 text-lg font-semibold text-black">
            Program Meeting Tahunan Pelaku UMKM Membahas Keberlanjutan
          </div>
        </div>
      </div>
    </div>
  </div>
</div>