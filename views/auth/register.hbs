        <!-- Content container -->
        <div class="absolute top-32 shrink-0 h-[717px] left-[63px] w-[610px] max-md:left-[5%] max-md:max-w-[600px] max-md:top-[50px] max-md:w-[90%] max-sm:left-[2.5%] max-sm:top-[30px] max-sm:w-[95%]">

            <!-- Logo and brand -->
            <header class="flex absolute shrink-0 gap-0 items-center h-[135px] left-[3px] top-[-100px] w-[146px] max-md:relative max-md:top-0 max-md:left-0 max-md:mb-10">
                <img src="https://api.builder.io/api/v1/image/assets/TEMP/271ead5e10553446658a22e01dc483cf47c76471?width=68"
                     alt="Growth logo"
                     class="relative shrink-0 aspect-[34/65] h-[65px] w-[34px]">
                <h1 class="relative shrink-0 text-3xl font-bold text-black h-[29px] w-[117px] max-sm:text-3xl font-outfit">
                    growth
                </h1>
            </header>

            <!-- Page title -->
            <h2 class="absolute top-0 text-2xl font-semibold text-black h-[31px] left-[391px] w-[77px] max-md:relative max-md:left-0 max-md:top-5 max-md:w-full max-md:text-center max-sm:text-2xl">
                Daftar
            </h2>

            <!-- Registration form -->
            <form action="/auth/register" method="POST" class="absolute left-0 top-[37px] w-[860px] max-md:relative max-md:left-0 max-md:top-20 max-md:w-full max-sm:top-[70px]">

            <!-- Email -->
            <div class="relative mt-5 h-[75px] w-full">
                <label for="email" class="absolute top-0 left-0.5 text-base font-medium text-gray-500">
                Email
                </label>
                <div class="absolute left-0 h-[48px] top-[24px] w-full">
                <input type="email" id="email" name="email" placeholder="Masukkan Email Usaha"
                    class="absolute top-0 left-0 w-full h-full rounded-xl bg-gray-400 bg-opacity-40 px-4 text-base text-black placeholder-black placeholder-opacity-50 border-none outline-none">
                </div>
            </div>

            <div class="relative mt-5 h-[75px] w-full">
                <label for="pic-name" class="absolute top-0 left-0.5 text-base font-medium text-gray-500">
                    Nama PIC
                </label>
                <div class="absolute left-0 h-[48px] top-[24px] w-full">
                    <input type="text" id="name" name="name" placeholder="Masukkan Nama PIC"
                    class="absolute top-0 left-0 w-full h-full rounded-xl bg-gray-400 bg-opacity-40 px-4 text-base text-black placeholder-black placeholder-opacity-50 border-none outline-none">
                </div>
            </div>

            <!-- Role Select -->
            <div class="relative mt-5 h-[75px] w-full">
                <label for="role" class="absolute top-0 left-0.5 text-base font-medium text-gray-500">
                Masuk Sebagai
                </label>
                <div class="absolute left-0 h-[48px] top-[24px] w-full">
                <select id="role" name="role"
                    class="absolute top-0 left-0 w-full h-full rounded-xl bg-gray-400 bg-opacity-40 px-4 text-base text-gray border-none outline-none">
                    <option value="" disabled selected>Pilih Role</option>
                    <option value="umkm">UMKM</option>
                    <option value="auditor">Auditor</option>
                </select>
                </div>
            </div>

            <!-- Password -->
            <div class="relative mt-5 h-[75px] w-full">
                <label for="password" class="absolute top-0 left-0.5 text-base font-medium text-gray-500">
                Password
                </label>
                <div class="absolute left-0 h-[48px] top-[24px] w-full">
                <input type="password" id="password" name="password" placeholder="Masukkan Password"
                    class="absolute top-0 left-0 w-full h-full rounded-xl bg-gray-400 bg-opacity-40 px-4 text-base text-black placeholder-black placeholder-opacity-50 border-none outline-none">
                </div>
            </div>




            <!-- Submit button -->
            <div class="relative mt-8 flex justify-end">
                <button type="submit"
                class="px-6 py-2 bg-orange-500 rounded-xl shadow-md cursor-pointer hover:bg-orange-600 transition-colors">
                <span class="text-lg font-bold text-white">Daftar</span>
                </button>
            </div>

            <!-- Login link -->
            <p class="relative mt-4 text-sm text-gray-500 text-start">
                Already have an account?
                <a href="#" class="text-yellow-400 font-semibold hover:text-yellow-500 transition-colors">Log in</a>
            </p>
